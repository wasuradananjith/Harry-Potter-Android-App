<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wasuradananjith.harrypotter.MainActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/hphome" />

    <Button
        android:id="@+id/btnMovies"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_above="@+id/btnChars"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:background="@drawable/buttonshape"
        android:fontFamily="sans-serif"
        android:text="Movies"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:typeface="monospace" />

    <Button
        android:id="@+id/btnChars"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/btnMovies"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnMovies"
        android:layout_marginBottom="148dp"
        android:background="@drawable/buttonshape"
        android:fontFamily="sans-serif"
        android:text="Exit"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

</RelativeLayout>
